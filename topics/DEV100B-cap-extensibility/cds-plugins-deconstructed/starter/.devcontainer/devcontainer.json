{
    "name": "plugins deconstructed - dev container",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "20",
            "CAPVER": "8.3.0"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "sapse.vscode-cds",
                "dbaeumer.vscode-eslint",
                "mechatroner.rainbow-csv"
            ]
        }
    },
    "forwardPorts": [
        4004
    ],
    "remoteUser": "node",
    "runArgs": ["--platform=linux/amd64" ]
}
